<?php

/**
 * @file
 * Provides an attendance record entity type.
 */

use Drupal\Core\Render\Element;

/**
 * Implements hook_theme().
 */
function attendance_record_theme() {
  return [
    'attendance_record' => [
      'render element' => 'elements',
    ],
  ];
}

/**
 * Prepares variables for attendance record templates.
 *
 * Default template: attendance-record.html.twig.
 *
 * @param array $variables
 *   An associative array containing:
 *   - elements: An associative array containing the attendance record information and any
 *     fields attached to the entity.
 *   - attributes: HTML attributes for the containing element.
 */
function template_preprocess_attendance_record(array &$variables) {
  foreach (Element::children($variables['elements']) as $key) {
    $variables['content'][$key] = $variables['elements'][$key];
  }
}
